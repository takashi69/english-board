<% if comments.any? %>
  <ul class="media-list">
    <% comments.each do |comment| %>
      <% user = comment.user %>
      <li class="media">
        <div class="media-left">
        </div>
        <div class="media-body">
          <div>
            <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= comment.created_at %></span>
          </div>
          <div>
            <p><%= comment.content %></p>
          </div>
        </div>
      </li>
    <% end %>
    <%= paginate comments %>
  </ul>
<% end %>