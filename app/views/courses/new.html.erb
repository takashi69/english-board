
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%#ほしいひきすうのものいれる@shool%>
    <%= form_for(@course, url: school_courses_path(@school)) do |f| %>

      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
        <%#= f.select :name, select_course, {}, class: 'form-control' %>
      </div>
      

      <div class="form-group">
        <%= f.label :price, 'Price' %>
        <%= f.text_field :price, class: 'form-control' %>
      </div>   

      <div class="form-group">
        <%= f.label :term, 'Term' %>
        <%= f.text_field :term, class: 'form-control' %>
      </div>
      
      <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>