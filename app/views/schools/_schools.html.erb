<% if schools.any? %>
  <ul class="media-list">
    <% schools.each do |school| %>
      <div class="media">
<%# ボックス横に三つ？ %>
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="media-body">
              <div>
                <%= school.name %>
              </div>
              <div>
                <%= school.explanation %>
              <div>
                <p><%= link_to 'Check school', school_path(school) %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
  <%= paginate schools %>
<% end %>
