<h1>id: <%= @school.id %> <%= @school.name %>のメッセージ編集ページ</h1>

<%= form_for(@school) do |f| %>
<div>
  <%= f.label :name, '学校名' %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<br>
<div>
  <%= f.label :address, '場所' %>
  <%= f.text_field :address, class: 'form-control' %>
</div>
<br>
<div>
  <%= f.label :explanation, '説明' %>
  <%= f.text_field :explanation, class: 'form-control' %>
</div>
<br>
<div>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
</div>

<% end %>

<%= link_to '一覧に戻る', schools_path %>